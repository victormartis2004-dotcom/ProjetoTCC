
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/Home.css" />

<div class="home-bodytrack d-flex flex-column align-items-center text-center">
    <!-- Hero -->
    <h1 class="mb-3">BodyTrack</h1>
    <p class="lead mb-5">Acompanhe sua evolução e alcance seus objetivos</p>

    <!-- Cards -->
    <div class="row justify-content-center g-4">
        <!-- Card Disciplina -->
        <div class="col-md-3">
            <div class="card feature-card">
                <div class="card-body">
                    <div class="icon mb-3">
                        <i class="bi bi-alarm" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5 class="card-title">DISCIPLINA</h5>
                    <p class="card-text">
                        Acompanhe seus treinos e construa consistência dia após dia.
                    </p>
                </div>
            </div>
        </div>

        <!-- Card Planejamento -->
        <div class="col-md-3">
            <div class="card feature-card">
                <div class="card-body">
                    <div class="icon mb-3">
                        <i class="bi bi-calendar3" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5 class="card-title">PLANEJAMENTO</h5>
                    <p class="card-text">
                        Organize seus exercícios, cargas e metas de evolução.
                    </p>
                </div>
            </div>
        </div>

        <!-- Card Evolução -->
        <div class="col-md-3">
            <div class="card feature-card">
                <div class="card-body">
                    <div class="icon mb-3">
                        <i class="bi bi-graph-up-arrow" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5 class="card-title">EVOLUÇÃO</h5>
                    <p class="card-text">
                        Veja seus resultados em gráficos e métricas claras.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

